{
  "$schema": "https://schema.tauri.app/config/1",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
  },
  "package": {
    "productName": "youtube-ia-briefer-tauri",
    "version": "0.1.0"
  },
  "tauri": {

    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true,
        "sidecar": true,
        "scope": [
          { "name": "ai-brain", "sidecar": true }
        ]
      }
    },
    "windows": [
      {
        "title": "youtube-ia-briefer-tauri",
        "width": 1200,
        "height": 700
      }
    ],
    "security": {
      "csp": null
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.youtube-ia-briefer-tauri.app",
      "externalBin": [
        "ai-brain"
      ],
      "resources": ["_internal"],
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    }
  }
}
